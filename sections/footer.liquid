                              </svg>
                            </span>
                            {{ block.settings.phone }}                            
                          </span>
                        {%- endif -%}
                        {%- if block.settings.address != blank -%}
                          <span class="footer-block__details-info--phone">
                            <span>
                              <svg width="24" height="30" viewBox="0 0 24 30" fill="none" xmlns="http://www.w3.org/2000/svg">
